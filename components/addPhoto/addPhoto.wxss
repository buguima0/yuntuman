/* components/addPhoto/addPhoto.wxss */
@import './icon.wxss';
.certificate-wrapper {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.photo-item {
  flex: 1;
  height: 222rpx;
  margin-right: 20rpx;
  line-height: 222rpx;
  background: #fff;
  text-align: center;
  border-radius: 10rpx;
  border: 1rpx dashed #ccc;
}

image {
  width: 100%;
  height: 100%;
}

.photo-none {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  line-height: 60rpx;
  color: #e6e6e6;
}

.icon-add {
  font-size: 60rpx;
}

text {
  line-height: 80rpx;
  font-size: 32rpx;
}
.photo-wrapper{
  margin-top:20rpx;
  background: #fff;
}
.photo-title{
  line-height: 60rpx;
  padding-left: 30rpx;
  color:#333;
}

.title-icon{
  font-size: 24rpx;
  width: 30rpx;
  color: #fe8080;
}