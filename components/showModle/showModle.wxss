@import "./icon.wxss";

/*弹窗  */

.model {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.masking {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.content {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  z-index: 5;
  width: 100%;
  /* border-radius: 10rpx; */
  font-size: 28rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.content .title {
  font-size: 30rpx;
  display: flex;
  line-height: 80rpx;
  padding: 0 30rpx;
  background: #fff;
}

.title-item {
  flex: 1;
  text-align: left;
}

.title-item-icon {
  flex: 1;
  text-align: right;
}

.close-reminder {
  box-sizing: border-box;
  color: #fff;
  z-index: 10;
  width: 100%;
  text-align: center;
  height:100rpx;
  line-height: 100rpx;
  background: #009fe8;
  margin-top:30rpx;
}
.close-reminder button{
  background: #009fe8;
  color: #fff;
}