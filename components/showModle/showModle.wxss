/*弹窗  */
.model {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.masking {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.content {
  position: fixed;
 bottom: 100rpx;
 left: 0;
  z-index: 5;
  background: white;
  width: 100%;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  overflow: hidden
}

.content .title {
  font-size: 30rpx;
 display: flex;
  line-height: 80rpx;
}
.title-item{
  flex: 1;
  text-align: left;
}
.title-item-icon{
  flex:1;
  text-align: right;
}
.close-reminder {
  box-sizing: border-box;
  color: green;
  z-index: 10;
  width: 100%;
  text-align: center;
  height:80rpx;
  border-top:1rpx solid #ccc;
  line-height: 80rpx
}
