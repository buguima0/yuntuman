/*弹窗  */
.model {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.masking {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.content {
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -260rpx;
  margin-top: -200rpx;
  z-index: 5;
  background: white;
  width: 520rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  overflow: hidden
}

.content .title {
  font-size: 30rpx;
  font-weight: bolder;
  text-align: center;
  line-height: 80rpx;
}

.close-reminder {
  box-sizing: border-box;
  color: green;
  z-index: 10;
  width: 100%;
  text-align: center;
  height:80rpx;
  border-top:1rpx solid #ccc;
  line-height: 80rpx
}
