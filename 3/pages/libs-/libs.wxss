.binding-logo {
  width: 220rpx;
  height: 220rpx;
  background: #ddd;
  border-radius: 50%;
  margin: 50px auto;
}

.binding-logo image {
  width: 100%;
  height: 100%;
}

.binding-form {
  padding: 0 100rpx 100rpx 100rpx;
  font-size: 28rpx;
  overflow: hidden;
}

.binding-form .input {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
  
}
.binding-form .input input{
vertical-align: middle;
}
.binding-form text {
  flex: 0 0 60rpx;
  line-height: 50rpx;
}

.binding-form .icon {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  flex: 0 0 60rpx;
  padding: 10rpx;
  text-align: center;
}

.binding-form .password {
  margin-top: 60rpx;
}

.binding-form  input {
  display: inline-block;
  padding-left: 30rpx;
  flex: 1;
}

.binding-form .binding {
  width: 200rpx;
  height: 64rpx;
  margin: 60rpx auto;
}

.binding-form .binding button {
  width: 100%;
  height: 100%;
  background: skyblue;
  color: white;
  line-height: 64rpx;
}
.warnword{
  display: block;
  height: 40rpx;
  color:red;
}
.border-red{
border-color: red!important;
}
.model{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index: 2
}
.masking{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3)
}
.content{
  position: fixed;
  top:50%;
  left:50%;
  margin-left:-260rpx;
  margin-top:-140rpx;
  z-index: 5;
  background: white;
  width: 520rpx;
  height: 280rpx;
  border-radius: 10rpx;
font-size: 28rpx;
padding:30rpx;
box-sizing: border-box;
}
.content .title{
font-size: 32rpx;
font-weight: bolder
}
.content .dsc{
  height:120rpx;
  line-height:120rpx; 
  color: #bbb;
}
.close-reminder{
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
  color:green;
  z-index: 10
}